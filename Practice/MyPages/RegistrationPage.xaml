<Page x:Class="Practice.MyPages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practice.MyPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Login</TextBlock>
            <TextBox x:Name="LoginTb" Width="100"></TextBox>
            <TextBlock>Password</TextBlock>
            <PasswordBox x:Name="PasswordTb" Width="100"></PasswordBox>
            <TextBlock>Password2</TextBlock>
            <PasswordBox x:Name="Password2Tb" Width="100"></PasswordBox>
            <TextBlock>Last Name</TextBlock>
            <TextBox x:Name="LastNameTb" Width="100"></TextBox>
            <TextBlock>First Name</TextBlock>
            <TextBox x:Name="FirstNameTb" Width="100"></TextBox>
            <TextBlock>Patronymic</TextBlock>
            <TextBox x:Name="PatronymicTb" Width="100"></TextBox>
            <Button x:Name="RegBt" Content="Зарегистрироваться" Margin="5" Click="RegBt_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
